<!DOCTYPE html>
<html lang="en">
    <head>
        <meta charset="UTF-8">
        <meta http-equiv="X-UA-Compatible" content="IE=edge">
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-GLhlTQ8iRABdZLl6O3oVMWSktQOp6b7In1Zl3/Jr59b6EGGoI1aFkw7cmDA6j6gD" crossorigin="anonymous">
        <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js" integrity="sha384-w76AqPfDkMBDXo30jS1Sgez6pr3x5MlQ1ZAGC+nuZB+EYdgRZgiwxhTBTkF7CXvN" crossorigin="anonymous"></script>
        <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.3.0/font/bootstrap-icons.css">
        
        <link rel="stylesheet" href="style.css">
        <title>Document</title>
    </head>
<body>
    <div class="container">
        <div class="row">

          <div class="col-sm-12" style="margin-top: 10%;">
            <form action="/respaldoo" method="get">
              <h1 class="text-center">OPCIONES RESPALDO</h1>
              <h5 style="margin-top: 20px;">1. Realizar un Respaldo ahora</h5>
              <button type="submit" id="botonRespaldo" class="btn btn-info" style="width: 100%;">Realizar Respaldo</button>
            </form>
          </div>

          <div class="col-sm-12">
            <form action="/cargarRespaldo" method="post" enctype="multipart/form-data">
              <h5 style="margin-top: 20px;">2. Importar Respaldo Existente</h5>
              <input type="file" name="archivo"><br>
              <button type="submit" id="botonCargar" class="btn btn-secondary" style="width: 100%;margin-top: 20px;">Cargar SQL</button>
            </form>
          </div>

          <div class="col-sm-12" style="margin-top: 10%;">
            <form action="/respaldin" method="GET">
              <h1 class="text-center">Tiempo del respaldo</h1>
              
              <h5 style="margin-top: 20px;">1. Realizar un Respaldo ahora</h5>
              <input class="form-control form-control-lg" type="number" name="numero" id="tiempoInput"><br>
              <button type="submit" id="btn" class="btn btn-info" style="width: 100%;">Guardar tiempo</button>
            </form>
          </div>
          

        </div>
    </div>

   

    <script>
        const btn = document.getElementById('botonRespaldo');
        const btn2 = document.getElementById('botonCargar');
  
        btn.addEventListener('click', ()=>{
          alert('Respaldo creado correctamente!')
        })
  
        btn2.addEventListener('click', ()=>{
          alert('Respaldo importado correctamente!')
        })
  
      </script>
</body>
</html>