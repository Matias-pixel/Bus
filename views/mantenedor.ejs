    <script>

function confirmar(id, nombre) {
    Swal.fire({
        title: 'Atención!',
        text: "¿Estás seguro de querer habilitar el asiento " + nombre + "?",
        icon: 'warning',
        showCancelButton: true,
        confirmButtonColor: '#3085d6',
        cancelButtonColor: '#d33',
        cancelButtonText: 'Cancelar',
        confirmButtonText: 'Sí, habilitar!'
    }).then((result) => {
        if (result.isConfirmed) {
            Swal.fire({
                title: 'Asiento habilitado correctamente!',
                icon: 'success'
            }).then(() => {
                window.location = '/habilitarAsientoA/' + id;
            });
        }
    });
}

